<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="homeScreenData"
            type="com.example.serviceyou.ui.data.HomeScreenData" />
    </data>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="@drawable/shadow_gradient"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingStart="@dimen/_55sdp"
                android:paddingLeft="@dimen/_55sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_55sdp"
                android:paddingRight="@dimen/_55sdp"
                android:text="@{homeScreenData.routineName}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingStart="@dimen/_55sdp"
                android:paddingLeft="@dimen/_55sdp"
                android:paddingEnd="@dimen/_55sdp"
                android:paddingRight="@dimen/_55sdp"
                android:paddingBottom="@dimen/_25sdp"
                android:text="@string/book_an_appointment"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
</layout>